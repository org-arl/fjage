{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "target": "es2020",
        "resolveJsonModule": true,
        "module": "Node16",
        "moduleResolution": "node16",
        "emitDeclarationOnly": true,
        "outDir": "dist/esm",
        "declarationMap": true,
        "types": ["node"]
    },
    "include": ["./src/*.js"]
}